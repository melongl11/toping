                  <th style="width: 15%">날짜</th>
                  <th style="width: 20%">편집</th>
                </tr>
              </thead>
              <tbody>
                <% for(let notice of notices) { %>
                  <tr>
                    <td><%= notice.id %></td>
                    <td><%= notice.title %></td>
                    <td><%= notice.description %></td>
                    <td><%= notice.createdAt %></td>
                    <td><button class="myBtn myBtn-3d myBtn-dark myBtn-sm">수정</button>&nbsp &nbsp<button class="myBtn myBtn-3d myBtn-dark myBtn-sm">삭제</button></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
		  <button class="myBtn" onclick="location.href='/ontoping/notice/edit'">공지사항 작성</button>
        </div>
      </section>


    </div>
    <% include ../footer_script %>



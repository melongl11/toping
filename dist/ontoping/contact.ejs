<!doctype html>
<html class="no-js" lang="">

<head>
  <% include ../head %>
  <% include ../mosaico_script %>

  <script type="text/javascript">
    function answerQuestion(id) {
      window.location.href="../ontoping/contact/" + id;
    }
  </script>
</head>

<body class="box-layout">
  <!-- Preloader Start Here -->
  <div id="preloader"></div>
  <% include header_admin %>
  <!-- Preloader End Here -->
  <div id="wrapper" class="wrapper">

    <section class="page-core">
      <div class="container">
        <div class="contact-form-wrap">

		<div class="section-heading text-center heading-dark heading-layout2">
            <div class="section m-0 pt-0">
                    <div class="container clearfix">
                        <div class="heading-block center" style="padding-bottom: 50px;">
                        <h1 class="text-uppercase" style="color: #ffffff;">문의사항 확인</h1> </div>
                    </div>
             </div>

          <table class="table" style="margin-left: auto; margin-right: auto; background-color: #f8f8f8;">
            <thead>
              <tr>
                <th style="width: 10%;">No.</th>
                <th style="width: 30%;">제목</th>
                <th style="width: 30%">email</th>
                <th style="width: 10%">날짜</th>
                <th style="width: 20%">답변하기</th>
              </tr>
            </thead>
            <tbody>
              <% for(let qna of qnas) { %>
              <tr>
                <td><%= qna.id %></td>
                <td><%= qna.title %></td>
                <% if(qna.User) { %>
                <td><%= qna.User.dataValues.email %></td>
                <%  } else { %>
                <td>error</td>
                <% } %>
                <td><%= qna.createdAt %></td>
                <td><button style="height: 30px; font-size: 10px; line-height: 30px;" type="submit" class="myBtn" onclick="answerQuestion(<%= qna.id %>)">답변하기</button></td>
                <td></td>
              </tr>
              <% } %>
            </tbody>
          </table>


        </div>
      </div>
    </section>

  </div>
  <% include ../footer_script %>


</body>

</html>

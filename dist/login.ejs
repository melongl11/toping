<!DOCTYPE html>
<html><!-- InstanceBegin template="/Templates/toping.dwt" codeOutsideHTMLIsLocked="false" -->
<head>

<% include head %>
<% include mosaico_script %>
<script>
	function loginPost() {
		$.ajax({
			type: "POST",
			url: "/users/login",
			data: {
				"userEmail": document.getElementById("userEmail").value,
				"password": document.getElementById("password").value
			},
			success: function(result) {
				if (result) {
					viewModel.newEdit('tutorial', result['uid']);
					// viewModel.newEdit.bind(undefined, 'tutorial', result['uid']);
					// window.location.href="../editor.html?0.17.4#templates/tutorial/template-tutorial.html";
				} else {
					alert("없는 아이디거나, 비밀번호를 잘못 입력하셨습니다.");
				}
			},
			error: function() {
				alert("없는 아이디거나, 비밀번호를 잘못 입력하셨습니다.");
			}
		})
	}
</script>
</head>


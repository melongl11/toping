
<!DOCTYPE html>
<html><!-- InstanceBegin template="/Templates/toping.dwt" codeOutsideHTMLIsLocked="false" -->
<head>

<% include ../head %>
<% include ../mosaico_script %>
<script type="text/javascript">
	function template_delete(id) {
		var form = document.createElement('form');
    form.setAttribute('method', 'post');
    form.setAttribute('action', '/mypage/template_history/' + id);
    form.style.display = 'hidden';
    document.body.appendChild(form)
    form.submit();
	}
</script>
</head>

<body>

	<% include ../header %>




        <!-- InstanceBeginEditable name="contents" -->



        <!-- content -->

        <section id="content">

            <div class="content-wrap">

                        <!-- ============ heading section ============ -->
												<div class="section m-0 pt-0">
												    <div class="container clearfix">
												        <div class="heading-block center">
												          <h1 class="text-uppercase">내 템플릿</h1>
												          <p class="lead">회원님이 제작한 템플릿을 확인할 수 있습니다.</p>
												     </div>
												    </div>
												 </div>
												</div><!-- /heading section -->


												<div class="container clearfix">

												<div class="row">

                        <div class="col-sm-12">
                            <div class="well bg-white b-0">
																<table id="searchTextResults" data-filter="#filter" data-page-size="5" class="table">
																<colgroup>
																		<col style="width: 60%">
																		<col style="width: 20%">
																		<col style="width: 20%">
																</colgroup>
																<thead>
																<tr>
																		<th class="text-left">템플릿 이름</th>
																		<th class="text-left">제작일</th>
																		<th class="text-left">삭제</th>
																</tr>
																</thead>
																<tbody>
																	<% for(let history of histories) { %>
																		<tr>
																		<td><a href="/editor.html?id=<%= history.id %>"><%= history.title %></a></td>
																		<td><%= history.createdAt %></td>
																		<td><button class="myBtn myBtn-3d myBtn-dark myBtn-sm" onClick="template_delete(<%= history.id %>)">삭제</button></td>
																		</tr>
																	<% } %>
																</tbody>
																<tfoot class="hide-if-no-paging">
																<tr>
																		<td colspan="5" class="text-left">
																				<ul class="pagination"></ul>
																		</td>
																</tr>
																</tfoot>
														</table>
                            </div>
                        </div>

                    </div>
                    <!-- /row -->


                </div>
                <!-- /container -->



                <script type="text/javascript">

                    $(document).ready(function() {

                        var cCarousel = $("#clients-carousel");

                        cCarousel.owlCarousel({
                            loop: true,
                            nav: false,
                            autoplay:true,
                            autoplayTimeout:3000,
                            autoplayHoverPause:true,
                            pagination: false,
                            margin: 30,
                            responsive:{
                                0:{ items:1 },
                                600:{ items:2 },
                                1000:{ items:4 },
                                1200:{ items:5 },
                                1400:{ items:6 }
                            }
                        });


                    }); //ready

                </script>
            </div>
        </section><!-- #content end -->

        <!-- InstanceEndEditable -->





            <div class="row">
                    <script type="text/javascript">

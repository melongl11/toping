<head>

<% include ../head %>
<% include ../mosaico_script %>
<script type="text/javascript">
	function changePassword() {
		var currentPW = document.forms["change-password-form"]["currnet_password"].value;
		var newPW = document.forms["change-password-form"]["new_password"].value;
		var newPWC = document.forms["change-password-form"]["new_password_check"].value;
		if (currentPW == "" || newPW == "" || newPWC == "") {
			alert("빈 칸을 채워주세요.");
		} else if (newPW != newPWC) {
			alert("비밀번호가 일치하지 않습니다.");
		} else {
			document.getElementById('change-password-form').submit();
		}
	}
</script>

</head>

<body>

